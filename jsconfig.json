{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"lib": [
			"esnext"
		],
		
		"checkJs": true,
		"noEmit": true,
		
		"strict": true,
		
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"forceConsistentCasingInFileNames": true
	},
	"typeAcquisition": {
		"include": [
			"node"
		]
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	],
	"include": [
		"*.js",
		"lib/*.js",
		"lib/**/*.js"
	]
}
